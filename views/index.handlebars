{{#each articles}}
  <ul class="collapsible" data-collapsible="accordion">

    <li>
      <div style="background-color: beige;" class="collapsible-header grey lighten-2">
        <i class="material-icons">language</i> <b>{{updated}}</b>
        <div style="clear: left; line-height: 110%; padding-bottom: 10px;"><b>{{title}}</b></div>
      </div>
      <div class="collapsible-body" style="background-color: beige;">
        <p>
          {{summary}}

          <i>Please read the full article <a href="{{link}}" target="_blank">here</a>.</i>
        </p>

      </div>
    </li>

  </ul>
{{/each}}